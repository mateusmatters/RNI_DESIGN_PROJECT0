<?xml version="1.0" encoding="utf-8" ?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"

             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             
             xmlns:local="clr-namespace:RNI_DESIGN_PROJECT0" xmlns:pv="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             x:Class="RNI_DESIGN_PROJECT0.Views.DailyActivitiesPage"
             xmlns:viewmodels="clr-namespace:RNI_DESIGN_PROJECT0.ViewModels"
             x:DataType= "viewmodels:DailyActivitiesPageViewModel">


    <Grid>
        <pv:PancakeView BackgroundColor="AliceBlue" Padding="24" CornerRadius="0" Grid.Row="0" Grid.Column="1" >
            <pv:PancakeView.BackgroundGradientStops>
                <pv:GradientStopCollection>
                    <pv:GradientStop Color="Red" Offset ="0"/>
                    <pv:GradientStop Color="Orange" Offset ="0.5"/>
                    <pv:GradientStop Color="Yellow" Offset ="1"/>
                </pv:GradientStopCollection>
            </pv:PancakeView.BackgroundGradientStops>
            <Label Text="{Binding WelcomeMessage}" HorizontalTextAlignment="Center" TextColor="White" Margin="0,20,0,0"/>
            
        </pv:PancakeView>
        <Image Source="{local:ImageResource RNI_DESIGN_PROJECT0.Images.icons8-buying-40.png}"/>



    </Grid>
</ContentPage>